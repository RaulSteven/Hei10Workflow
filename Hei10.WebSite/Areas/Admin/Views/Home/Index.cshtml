    <!-- init -->
    <script type="text/javascript">
        $(function() {
            BJUI.init({
                JSPATH: '/Res/b-jui/BJUI/', //[可选]框架路径
                PLUGINPATH: '/Res/b-jui/BJUI/plugins/', //[可选]插件路径
