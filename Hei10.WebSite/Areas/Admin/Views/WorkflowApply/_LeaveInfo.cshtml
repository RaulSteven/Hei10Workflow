@model LeaveInfoModel
<script>
    var getConditions = function () {
        var days = $.CurrentNavtab.find('#txtDays').val();
        return "Days_"+days;
    };
</script>
<table class="table-bordered table-condensed table-hover" width="100%">
    <tbody>
        <tr>
            <td align="center"><h3>申请假期</h3></td>
        </tr>
        <tr>
            <td>
                <label for="txtDays" class="control-label x90">请假天数：</label>
                <input type="text" class="inputValidate" name="Days" id="txtDays" value="@Model.Days" data-rule="required;integer;range[1~]" size="20">
            </td>
        </tr>
        <tr>
            <td>
                <label for="txtLeaveType" class="control-label x85">请假类型：</label>
                <input type="text" class="inputValidate" name="LeaveType" id="txtLeaveType" value="@Model.LeaveType" data-rule="required;length[~10]" size="20">
            </td>
        </tr>
        <tr>
            <td>
                <label for="txtStartTime" class="control-label x85">请假时间：</label>
                <input type="text" class="inputValidate" name="StartTime" id="txtStartTime" value="@Model.StartTime.ToDisplayDate()" data-toggle="datepicker" data-pattern="yyyy-MM-dd" data-rule="required;date" size="30"> -
                <input type="text" class="inputValidate" name="EndTime" id="txtEndTime" value="@Model.EndTime.ToDisplayDate()" data-toggle="datepicker" data-pattern="yyyy-MM-dd" data-rule="required;date" size="30">
            </td>
        </tr>
        <tr>
            <td>
                <label for="txtRemark" class="control-label x85">请假事由：</label>
                <textarea cols="30" class="inputValidate" id="txtRemark" name="Remark" class="form-control" data-rule="length[~250]" style="width: 500px; margin: 0px; height: 46px;">@Model.Remark</textarea>
            </td>
        </tr>
    </tbody>
</table>
