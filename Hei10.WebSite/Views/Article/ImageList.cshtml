@model PagedList.IPagedList<JR.Domain.Models.Article>

@{
    ArticleClassify classify = ViewBag.Classify;
    ViewBag.Title = classify.Name;
    Layout = "~/Views/Shared/_Layout_Menu.cshtml"; 
}
@section menuFootJs{
    <script src="~/Res/home/js/jquery-page.js"></script>
    <script type="text/javascript" language="javascript"> 
        var removeListClass = function() {
            $('.ul-page-list .project-list').removeClass('last-project');
        }
        $('.get-data-div').click(function() {
            clickDate($('.ul-page-list'), $('.pageList'),@(Model.PageCount), '@Html.Raw(Url.Action("TextList", new {classifyId = classify.Id}))', removeListClass);
        });
    </script>
}
<div class="new-info">
    <div class="list-pro ul-page-list">@{ Html.RenderPartial("_ImageList", Model); }</div>
    <div class="pageList" style="display: none;"></div>
    @if (Model != null && Model.PageCount > 1)
    {
        <div class="more  get-data-div"><a href="javascript:;">查看更多<img src="/Res/home/images/icon-down.png" alt=""></a></div>
    } 
</div>
